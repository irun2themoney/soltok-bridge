{
  "manifest_version": 3,
  "name": "SolTok Bridge",
  "version": "1.0.7",
  "description": "Pay for TikTok Shop items with Solana USDC",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.tiktok.com/*",
    "http://localhost:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png"
    },
    "default_title": "SolTok Bridge"
  },
  "content_scripts": [
    {
      "matches": ["https://*.tiktok.com/*", "http://localhost:*/*"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://*.tiktok.com/*", "http://localhost:*/*"]
    }
  ]
}
